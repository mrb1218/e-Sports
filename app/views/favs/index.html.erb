<p id="notice"><%= notice %></p>

<h1>Favs</h1>

<table>
  <thead>
    <tr>
      <th>Playerid</th>
      <th>Teamid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favs.each do |fav| %>
      <tr>
        <td><%= fav.playerID %></td>
        <td><%= fav.teamID %></td>
        <td><%= link_to 'Show', fav %></td>
        <td><%= link_to 'Edit', edit_fav_path(fav) %></td>
        <td><%= link_to 'Destroy', fav, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fav', new_fav_path %>
