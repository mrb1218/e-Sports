<div class="home_favorites">
  <% if user_signed_in? %>
    <h1><%= current_user.first_name %> <%= current_user.last_name %>'s Favorites</h1>
    <h6><a href="<%= favorites_url %>">Add / Edit Favorites</a></h6>
    <% favorites = Favorite.where(user_id: current_user.id).all; if favorites.length > 0 %>
    <% Favorite.where(user_id: current_user.id).all.each do |favorite| %>
    <div class="row">
      <div class="col-xs-12">
        <% if favorite.teamID != "" %>
        <% team = Team.where(id: favorite.teamID).first %>
        <a href="/teams/<%= team.id %>"><%= team.team_name %></a>
        <% else %>
        <% player = Player.where(id: favorite.playerID).first %>
        <a href="/players/<%= player.id %>"><%= player.ign %></a>
        <% end %>
      </div>
    </div>
    <% end %>
    <% else %>
      <p>User has no favorites. Click <a href="/favorites">here</a> to add favorites!</p>
    <% end %>
  <% end %>
</div>

