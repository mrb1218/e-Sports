<p id="notice"><%= notice %></p>

<% team1 = Team.where(id: @match.team1ID).first %>
<% team2 = Team.where(id: @match.team2ID).first %>

<h2><a href='/teams/<%=team1.id%>'><%= team1.team_name %></a> V <a href='/teams/<%=team2.id%>'><%= team2.team_name %></a></h2>

<p>
  <strong>Match Date/Time:</strong>
  <%= @match.match_date_time %>
</p>

<p>
  <strong>Location:</strong>
  <%= @match.location %>
</p>

<p>
  <strong>Team1score:</strong>
  <%= @match.team1Score %>
</p>

<p>
  <strong>Team2score:</strong>
  <%= @match.team2Score %>
</p>

<p>
  <strong>League:</strong>
  <%= League.where(id: @match.league_id).first.league_name %>
</p>
