<p id="notice"><%= notice %></p>

<h1>
  <strong><%= @team.team_name %></strong>
</h1>

<p class="team-bio">
  <%= @team.bio %>
</p>

<p>
  <strong>League:</strong>
  <%= League.find(String(@team.league_id)).league_name %>
</p>

<p>
  <strong>Coach:</strong>

</p>

<h3>Players</h3>
<ul>
<% if Player.where(team_id: @team.id).count > 0; %>
  <% Player.where(team_id: @team.id).each do |player|; user = User.where(id: player.user_id).first %>
    <li class="players"><a href='/players/<%= player.id %>'><%= user.first_name %> <%= user.last_name %></a>, <%= player.in_game_role %></a></li>
  <% end %>
<% else %>
  <p class="no-players">No players on this team</p>
<% end %>
</ul>
