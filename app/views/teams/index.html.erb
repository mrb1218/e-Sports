<!DOCTYPE html>
<html>

  <p id="notice">
    <%= notice %>
  </p>

  <h1>Teams</h1>


  <center>
    <div class="row">
      <div class="col-lg-4">
        <h3>Team name:</h3>
      </div>

      <div class="col-lg-4">
        <h3>Team info:</h3>

  <div class="row">
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
      <h3>Team name:</h3>
    </div>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
      <h3>Bio:</h3>
    </div>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
      <h3>Coach:</h3>
    </div>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
      <h3>League:</h3>
    </div>
  </div>

  <% @teams.each do |team| %>
    <div class="row">
      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <a href='/teams/<%team.id%>'>
          <%= team.team_name %>
        </a>
      </div>

      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <%= team.bio %>
      </div>

      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <%= team.coachID %>

      </div>
    </div>


    <% @teams.each do |team| %>
      <div class="row">
        <div class="col-lg-4">
          <a href='/teams/<%team.id%>'>
            <%= team.team_name %>
            <div class="row">
              <img src="/images/team_<%= team.id %>.jpg" class="img-fluid" style="width: 20%; height: 20%"/>
            </div>
          </a>
          <br>
          <br>
        </div>

        <left>
        <div class="col-lg-4">
          <div class="row">
            <b>Bio:</b> <%= team.bio %>
          </div>

          <div class="row">
            <b>Coach:</b> <%= team.coachID %>
          </div>

          <div class="row">
            <b>League:</b> <%= League.where(id: team.league_id).first.league_name %>
          </div>
        </div>

      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <%= League.where(id: team.league_id).first.league_name %>

      </div>
    <% end %>
  </center>

</html>
