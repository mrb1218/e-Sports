<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<center>
  <% @teams.each do |team| %>
    <div class="row">
      <div class="col-sm-4">
        <div class="row" style="padding: 5px;">
          <a href='/teams/<%=team.id%>'>
            <img src="/assets/team_<%= team.id %>.png" style="width: 40%; height: 40%"/>
          </a>
        </div>
      </div>
      <br>
      <div id="team_info" class="col-sm-8">
        <div class="row">
          <b>Bio:</b> <%= team.bio %>
        </div>
        <div class="row">
          <b>Coach:</b> <%= coach = User.where(String(team.coachID)).first.first_name if team.coachID %>
                        <%= coach = User.where(String(team.coachID)).first.last_name if team.coachID %>
        </div>
        <div class="row">
          <h3><%= League.where(id: team.league_id).first.league_name %></h3>
        </div>
      </div>

    </div>
  <% end %>
</center>
