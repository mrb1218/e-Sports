<%= form_for(favorite) do |f| %>
  <% if favorite.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(favorite.errors.count, "error") %> prohibited this favorite from being saved:</h2>
      <ul>
        <% favorite.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Team %>
    <%= f.collection_select :teamID, Team.order(:team_name),:id,:team_name, include_blank: true %>
  </div>

  <p>Or</p>

  <div class="field">
    <%= f.label :Player %>
    <%= f.collection_select :playerID, Player.order(:ign),:id,:ign, include_blank: true %>
  </div>

  <div class="actions">
    <div class="field"><%= f.submit%></div>
  </div>
<% end %>
