<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

  <div class="field">
   <div class="field_name">  <%= f.label :email %></div>
    <%= f.email_field :email, autofocus: true %>
  </div>


  <div class="field_name"><%= f.label :password %></div>
    <input autocomplete="off" type="password" name="user[password]" id="user_password" style="color:black;"%>


  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
  <div class="field"><%= f.submit "Log in" %></div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
